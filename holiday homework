n = 0
r = 12
for m in range(1, r+1):
   for gap in range(1, (r-m)+1):
      print(end=" ")
   while n != (2*m-1):
      print("*", end="")
      n = n + 1
   n = 0
   print()

print("        WELCOME")

row = 12

for i in range(row,0,-1):
    for j in range(row-i):
        print(' ', end='')
    
    for j in range(2*i-1):
        print('*',end='') 
    print() 
